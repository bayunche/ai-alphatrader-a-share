{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "yarn build:server && yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "AI AlphaTrader",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://**", "https://**"]
      },
      "fs": {
        "all": false,
        "writeFile": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "message": true,
        "save": true
      }
    },
    "windows": [
      {
        "title": "AI AlphaTrader",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com https://aistudiocdn.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' http://localhost:* http://127.0.0.1:* https://* wss://* data:; img-src 'self' data: https://*;"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.alpha-trader.app",
      "externalBin": [
        "bin/server"
      ],
      "icon": [
        "../assets/desktop_icon_rgba.png"
      ],
      "resources": [
        "../assets/desktop_icon_rgba.png",
        "../assets/tray_icon_rgba.png"
      ]
    },
    "systemTray": {
      "iconPath": "../assets/tray_icon_rgba.png",
      "iconAsTemplate": false
    }
  }
}
